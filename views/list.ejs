<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>    
    
    <div class="box">


           
        <%newlistItem.forEach(function(newlistItem){ %> 
           <form  action="/delete" method="POST">    
                <div class="item">
                    <input type="checkbox" name="check" value="<%=newlistItem._id%>" onchange="this.form.submit()"> 
                    <p><%=newlistItem.name%></p>
                </div>   
                <input type="hidden" name="hide" value="<%=listTitle%>">
            </form>    
        <%})%>    
   

        <form class="item" action="/" method="post">
            <input type="text" name="userInput" placeholder="New Item" autocomplete="off">
            <button type="submit"name="list" value="<%=listTitle%>">+</button>
         </form>
    </div>
<%- include("footer") -%>

 